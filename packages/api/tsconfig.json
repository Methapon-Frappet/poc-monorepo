{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2021",

    /* Modules */
    "module": "ES2022",
    "moduleResolution": "node",
    "types": ["bun-types"],

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 1,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
